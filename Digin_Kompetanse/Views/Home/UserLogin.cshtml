@{
    ViewData["Title"] = "Brukerinnlogging";
}

<style>
    body {
        background-color: #f8fafc;
        font-family: "Segoe UI", sans-serif;
        margin: 0;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 100px; /* avstand fra navbar */
        min-height: 100vh;
    }

    .login-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        padding: 2rem 2.5rem; /* litt bredere padding */
        box-sizing: border-box;

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .login-card h2 {
        color: #007baf;
        font-weight: 700;
        margin-bottom: 1.8rem;
        text-align: center;
    }

    form {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        width: 85%; /* smalere felt */
        margin-bottom: 1rem;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 0.4rem;
        color: #333;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 9px 12px;
        border: 1px solid #cfd8dc;
        border-radius: 6px;
        font-size: 15px;
        background-color: #f9fbfc;
        transition: all 0.2s ease;
    }

    input:focus {
        outline: none;
        border-color: #007baf;
        box-shadow: 0 0 0 3px rgba(0, 123, 175, 0.2);
        background-color: #fff;
    }

    .btn-login {
        background-color: #007baf;
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 6px;
        padding: 10px;
        width: 85%; /* samme bredde som feltene */
        margin-top: 0.5rem;
        cursor: pointer;
        transition: background-color 0.25s ease;
    }

    .btn-login:hover {
        background-color: #006a99;
    }

    .back-link {
        text-align: center;
        display: block;
        margin-top: 1.4rem;
        color: #007baf;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        text-decoration: underline;
        color: #005f85;
    }

    .alert {
        background-color: #ffe2e2;
        border: 1px solid #ffb3b3;
        color: #a94442;
        border-radius: 6px;
        padding: 10px;
        width: 85%;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <h2>Logg inn som bedrift</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert">@ViewBag.Error</div>
        }

        <form asp-action="UserLogin" method="post">
            <div class="form-group">
                <label for="username">Brukernavn</label>
                <input type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label for="password">Passord</label>
                <input type="password" id="password" name="password" required />
            </div>

            <button type="submit" class="btn-login">Logg inn</button>
        </form>

        <a asp-controller="Admin" asp-action="Login" class="back-link">
            Administrator
        </a>
    </div>
</div>
