@model IEnumerable<Digin_Kompetanse.Models.Kompetanse>
@{
    ViewData["Title"] = "Kompetanseoversikt";
    
    var grupper = Model
        .SelectMany(k => k.Fagområdes, (k, f) => new { Kompetanse = k, Fagområde = f })
        .Where(x => x.Fagområde.Bedrift != null)
        .Select(x => new 
        {
            Bedrift = x.Fagområde.Bedrift!,
            Fagområde = x.Fagområde,
            Kompetanse = x.Kompetanse,
            Underkompetanser = x.Kompetanse.UnderKompetanses
                .Where(uk => uk.KompetanseId == x.Kompetanse.KompetanseId)
                .ToList()
        })
        .GroupBy(x => x.Bedrift)
        .ToList();
}

<div class="container mt-5">
    <h2>Kompetanseoversikt</h2>

    @foreach (var bedriftGruppe in grupper)
    {
        var bedrift = bedriftGruppe.Key;
        <div class="mb-5">
            <h4 class="text-secondary border-bottom pb-2">
                @bedrift.BedriftNavn
                <small class="text-muted">(@bedrift.BedriftEpost)</small>
            </h4>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fagområde</th>
                            <th>Kompetanse</th>
                            <th>Underkompetanser</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in bedriftGruppe)
                        {
                            <tr>
                                <td>@item.Fagområde.FagområdeNavn</td>
                                <td>@item.Kompetanse.KompetanseKategori</td>
                                <td>
                                    @if (item.Underkompetanser.Any())
                                    {
                                        <ul class="mb-0">
                                            @foreach (var uk in item.Underkompetanser)
                                            {
                                                <li>@uk.UnderkompetanseNavn</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Ingen</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
