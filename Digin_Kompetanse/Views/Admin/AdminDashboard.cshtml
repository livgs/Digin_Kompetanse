@model IEnumerable<Digin_Kompetanse.Models.ViewModels.AdminViewModel>
@{
    ViewData["Title"] = "Admin";
}

<body>
<h2 class="mb-4">Innsendinger</h2>

<table class="table table-striped align-middle">
    <thead class="table-light">
    <tr>
        <th>Bedrift</th>
        <th>E-post</th>
        <th>Fagområde</th>
        <th>Kompetanse</th>
        <th>Handling</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BedriftNavn</td>
            <td>@item.Epost</td>
            <td>@item.Fagområde</td>
            <td>@item.KompetanseKategori</td>
            <td>
                <form asp-action="DeleteBedrift" asp-controller="Admin" 
                      asp-route-id="@item.BedriftId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Slette denne bedriften og alle tilknyttede kompetanser?');">
                        Slett bedrift
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>