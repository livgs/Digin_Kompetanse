@model IEnumerable<Digin_Kompetanse.Models.ViewModels.AdminViewModel>

@{
    ViewData["Title"] = "Administrasjonspanel";
    var fagomrader = ViewBag.Fagomrader as List<string> ?? new List<string>();
    var kompetanser = ViewBag.Kompetanser as List<string> ?? new List<string>();

    var valgtFagomrade = Context.Request.Query["fagomrade"].ToString();
    var valgtKompetanse = Context.Request.Query["kompetanse"].ToString();
}

<!DOCTYPE html>
<html lang="no">
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff;
            color: #222;
        }

        h2 {
            text-align: center;
            color: #009FE3; /* Digin blå */
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .step {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 2rem 3rem;
            margin-bottom: 2rem;

            /* Gjør den 3x bredere */
            max-width: 1800px;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }

        .step h5 {
            color: #009FE3;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .filter-row {
            display: flex;
            justify-content: flex-start;
            align-items: end;
            flex-wrap: nowrap;
            gap: 2rem;
        }

        .form-select {
            border-radius: 8px;
            width: 260px;
        }

        .btn-digin {
            background-color: #009FE3;
            border: none;
            color: #fff;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.2s ease;
            height: 36px;
        }

        .btn-digin:hover {
            background-color: #008AC5;
        }

        .btn-outline-digin {
            border: 1px solid #009FE3;
            color: #009FE3;
            border-radius: 6px;
            transition: all 0.2s ease;
            height: 36px;
        }

        .btn-outline-digin:hover {
            background-color: #009FE3;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        thead {
            background-color: #E6F4FB; /* Lys blå bakgrunn */
        }

        th {
            color: #009FE3;
            font-weight: 600;
            padding: 1rem;
        }

        td {
            padding: 1rem;
            border-top: 1px solid #eee;
        }

        .text-muted {
            color: #888;
        }
    </style>
</head>
<body>
    <div>
        <h2>@ViewData["Title"]</h2>

<table class="table table-striped align-middle">
    <thead class="table-light">
    <tr>
        <th>Bedrift</th>
        <th>E-post</th>
        <th>Fagområde</th>
        <th>Kompetanse</th>
        <th>Handling</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BedriftNavn</td>
            <td>@item.Epost</td>
            <td>@item.Fagområde</td>
            <td>@item.KompetanseKategori</td>
            <td>
                <form asp-action="DeleteBedrift" asp-controller="Admin" 
                      asp-route-id="@item.BedriftId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Slette denne bedriften og alle tilknyttede kompetanser?');">
                        Slett bedrift
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>
