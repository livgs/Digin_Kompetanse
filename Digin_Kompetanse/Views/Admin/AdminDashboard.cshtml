@model IEnumerable<Digin_Kompetanse.Models.ViewModels.AdminViewModel>

@{
    ViewData["Title"] = "Administrasjonspanel";
    var fagomrader = ViewBag.Fagomrader as List<string> ?? new List<string>();
    var kompetanser = ViewBag.Kompetanser as List<string> ?? new List<string>();

    var valgtFagomrade = Context.Request.Query["fagomrade"].ToString();
    var valgtKompetanse = Context.Request.Query["kompetanse"].ToString();
}

<!DOCTYPE html>
<html lang="no">
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff;
            color: #222;
        }

        h2 {
            text-align: center;
            color: #009FE3; /* Digin blå */
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .step {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 2rem 3rem;
            margin-bottom: 2rem;

            /* Gjør den 3x bredere */
            max-width: 1800px;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }

        .step h5 {
            color: #009FE3;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .filter-row {
            display: flex;
            justify-content: flex-start;
            align-items: end;
            flex-wrap: nowrap;
            gap: 2rem;
        }

        .form-select {
            border-radius: 8px;
            width: 260px;
        }

        .btn-digin {
            background-color: #009FE3;
            border: none;
            color: #fff;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.2s ease;
            height: 36px;
        }

        .btn-digin:hover {
            background-color: #008AC5;
        }

        .btn-outline-digin {
            border: 1px solid #009FE3;
            color: #009FE3;
            border-radius: 6px;
            transition: all 0.2s ease;
            height: 36px;
        }

        .btn-outline-digin:hover {
            background-color: #009FE3;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        thead {
            background-color: #E6F4FB; /* Lys blå bakgrunn */
        }

        th {
            color: #009FE3;
            font-weight: 600;
            padding: 1rem;
        }

        td {
            padding: 1rem;
            border-top: 1px solid #eee;
        }

        .text-muted {
            color: #888;
        }
    </style>
</head>
<body>
    <div>
        <h2>@ViewData["Title"]</h2>

        <div class="step">
            <h5><strong>Filtrer innsendinger</strong></h5>

            <form method="get" asp-action="AdminDashboard">
                <div class="filter-row">
                    <!-- Fagområde -->
                    <div>
                        <label for="fagomrade" class="form-label fw-semibold mb-1">Fagområde</label>
                        <select id="fagomrade" name="fagomrade" class="form-select form-select-sm">
                            <option value="">Alle</option>
                            @foreach (var fag in fagomrader)
                            {
                                <option value="@fag" selected="@(valgtFagomrade == fag)">@fag</option>
                            }
                        </select>
                    </div>

                    <!-- Kompetanse -->
                    <div>
                        <label for="kompetanse" class="form-label fw-semibold mb-1">Kompetanse</label>
                        <select id="kompetanse" name="kompetanse" class="form-select form-select-sm">
                            <option value="">Alle</option>
                            @foreach (var komp in kompetanser)
                            {
                                <option value="@komp" selected="@(valgtKompetanse == komp)">@komp</option>
                            }
                        </select>
                    </div>

                    <!-- Knapper -->
                    <div class="d-flex align-items-end" style="gap: 0.75rem;">
                        <button type="submit" class="btn btn-digin btn-sm d-flex align-items-center px-3">
                            <i class="bi bi-search me-1"></i> Filtrer
                        </button>
                        <a asp-action="AdminDashboard" class="btn btn-outline-digin btn-sm d-flex align-items-center px-3">
                            <i class="bi bi-x-circle me-1"></i> Tøm
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <div class="step">
            <h5><strong>Innsendinger</strong></h5>

            <div class="table-responsive">
                <table class="table align-middle text-center mb-0">
                    <thead>
                        <tr>
                            <th>Bedrift</th>
                            <th>E-post</th>
                            <th>Fagområde</th>
                            <th>Kompetanse</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="4" class="text-muted py-4">Ingen treff på valgt filter.</td></tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BedriftNavn</td>
                                    <td>@item.Epost</td>
                                    <td>@item.Fagområde</td>
                                    <td>@item.KompetanseKategori</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
