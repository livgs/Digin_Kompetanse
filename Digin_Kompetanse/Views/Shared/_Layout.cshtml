<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digin_Kompetanse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Base style */
        .navbar .nav-link {
            position: relative;
            color: #212529;
            text-decoration: none;
            transition: color 0.2s ease-in-out;
            padding-bottom: 4px;
        }

        /* Blå strek ved hover */
        .navbar .nav-link::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 0%;
            height: 2px;
            background-color: #005fa3; /* Digin blå */
            transition: width 0.25s ease-in-out;
            border-radius: 1px;
        }

        .navbar .nav-link:hover::after {
            width: 100%;
        }

        /* Aktiv side beholder streken */
        .navbar .nav-link.active-link::after {
            width: 100%;
        }

        /* Gjør ikke teksten blå eller endret ved hover */
        .navbar .nav-link:hover {
            color: #212529;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://digin.no/media/2wahlbab/digin-blaa-2x.png" alt="logo" style="width:154px;height:70px;">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active-link" : "")"
                           asp-area="" asp-controller="Home" asp-action="Login">Hjem</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Overview" ? "active-link" : "")"
                           asp-area="" asp-controller="Home" asp-action="Overview">Oversikt</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active-link" : "")"
                           asp-area="" asp-controller="Home" asp-action="Privacy">Personvern</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Help" ? "active-link" : "")"
                           asp-area="" asp-controller="Home" asp-action="Help">Hjelp</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AdminLogin" ? "active-link" : "")"
                           asp-area="" asp-controller="Admin" asp-action="AdminLogin">Administrator</a>
                    </li>

                    <li class="nav-item ms-auto">
                        <form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-dark d-flex align-items-center" style="display:inline; padding:0;">
                                <i class="bi bi-box-arrow-right me-1"></i> Logg ut
                            </button>
                        </form>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Digin_Kompetanse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Personvern</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
