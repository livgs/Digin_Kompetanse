<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digin Kompetanse</title>

    <!-- Fonter -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Mulish:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="@(
             Context.Session.GetString("Role") == "Admin" ? "role-admin" : 
             Context.Session.GetString("Role") == "Bedrift" ? "role-bedrift" : 
             "role-guest")">

@{
    var role = Context.Session.GetString("Role");
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0">
        <div class="container-fluid">
            <a class="navbar-brand">
                <img src="https://digin.no/media/2wahlbab/digin-blaa-2x.png"
                     alt="logo"
                     style="width:154px;height:70px;">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    
                    @if (role != "Bedrift" && role != "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(action == "Login" ? "active-link" : "")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Login">
                                Hjem
                            </a>
                        </li>
                    }

                    @* OVERSIKT – kun for bedrift *@
                    @if (role == "Bedrift")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(
                                   controller == "Home" &&
                                   (action == "Overview" || action == "Index")
                                       ? "active-link"
                                       : ""
                                   )"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Overview">
                                Oversikt
                            </a>
                        </li>
                    }

                    @* Personvern – alltid tilgjengelig *@
                    <li class="nav-item">
                        <a class="nav-link @(action == "Privacy" ? "active-link" : "")"
                           asp-area=""
                           asp-controller="Home"
                           asp-action="Privacy">
                            Personvern
                        </a>
                    </li>

                    @* Hjelp – alltid tilgjengelig *@
                    <li class="nav-item">
                        <a class="nav-link @(action == "Help" ? "active-link" : "")"
                           asp-area=""
                           asp-controller="Home"
                           asp-action="Help">
                            Hjelp
                        </a>
                    </li>

                    @* ADMIN – dashboard for admin, login for gjest, skjules for bedrift *@
                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(
                                   controller == "Admin" && action == "AdminDashboard"
                                       ? "active-link"
                                       : ""
                                   )"
                               asp-controller="Admin"
                               asp-action="AdminDashboard">
                                Admin
                            </a>
                        </li>
                    }
                    else if (role != "Bedrift")   @* gjest *@
                    {
                        <li class="nav-item">
                            <a class="nav-link @(
                                   controller == "Admin" && action == "AdminLogin"
                                       ? "active-link"
                                       : ""
                                   )"
                               asp-controller="Admin"
                               asp-action="AdminLogin">
                                Admin
                            </a>
                        </li>
                    }

                    @* Logg ut-knapper *@
                    @if (role == "Bedrift")
                    {
                        <li class="nav-item">
                            <form asp-controller="Auth"
                                  asp-action="LogoutBedrift"
                                  method="post"
                                  class="d-inline">
                                <button type="submit"
                                        class="btn btn-link nav-link text-dark d-flex align-items-center"
                                        style="display:inline; padding:0;">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logg ut
                                </button>
                            </form>
                        </li>
                    }
                    else if (role == "Admin")
                    {
                        <li class="nav-item">
                            <form asp-controller="Admin"
                                  asp-action="LogoutAdmin"
                                  method="post"
                                  class="d-inline">
                                <button type="submit"
                                        class="btn btn-link nav-link text-dark d-flex align-items-center"
                                        style="display:inline; padding:0;">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logg ut
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

@* Blå informasjonslinje for admin *@
@if (role == "Admin")
{
    <div class="admin-banner">
        <span>Logget inn som Digin</span>
    </div>
}

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Digin Kompetanse -
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Personvern</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
